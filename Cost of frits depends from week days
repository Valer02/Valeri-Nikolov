import java.util.Scanner;

public class zad5 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner( System.in );

        String fruit = scanner.nextLine().toLowerCase();
        String weekday = scanner.nextLine().toLowerCase();
        double quantity = Double.parseDouble( scanner.nextLine() );

        double cost = 0;

        if (weekday.equals( "Monday" ) || weekday.equals( "Tuesday" ) || weekday.equals( "Wednesday" ) || weekday.equals( "Thursday" ) || weekday.equals( "Friday" )) {
        }
        if (fruit.equals( "banana" )) {
            cost = 2.5;
        } else if (fruit.equals( "apple" )) {
            cost = 1.2;
            System.out.println( cost * quantity );

        } else {

        }
        if (weekday.equals( "Saturday" ) || weekday.equals( "Sunday" )) {

        } else if (fruit.equals( "banana" )) {
            cost = 2.7;

        } else if (fruit.equals( "apple" )) {
            cost = 1.25;
        }
        System.out.println( cost * quantity );
    }
}
